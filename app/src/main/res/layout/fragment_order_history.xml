<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wallpaper"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Spinner
        android:id="@+id/spinner_filter"
        style="@style/styleTextdomineBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_2"
        android:layout_gravity="right"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/radius_border"
        android:entries="@array/filter"
        android:hint="Filter"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textSize="24sp" />

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="Order 5"
        android:textAlignment="center"
        style="@style/styleTextdomineColorPrimary"
        android:padding="15dp"
        android:textSize="24sp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"/>

    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="Order 4"
        android:textAlignment="center"
        style="@style/styleTextdomineColorPrimary"
        android:padding="15dp"
        android:textSize="24sp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_4"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"/>


    <View
        android:id="@+id/view_5"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="Order 3"
        android:textAlignment="center"
        style="@style/styleTextdomineColorPrimary"
        android:padding="15dp"
        android:textSize="24sp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_6"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"/>


    <View
        android:id="@+id/view_7"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="Order 2"
        android:textAlignment="center"
        style="@style/styleTextdomineColorPrimary"
        android:padding="15dp"
        android:textSize="24sp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_8"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"/>

    <View
        android:id="@+id/view_9"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="Order 1"
        android:textAlignment="center"
        style="@style/styleTextdomineColorPrimary"
        android:padding="15dp"
        android:textSize="24sp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_10"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"/>

</LinearLayout>